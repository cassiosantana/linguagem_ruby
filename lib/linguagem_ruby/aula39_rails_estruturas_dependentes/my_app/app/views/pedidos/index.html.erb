<p style="color: green"><%= notice %></p>

<h1>Todos os pedidos</h1>

<div id="pedidos">
  <table>
    <thead>
    <tr>
      <th>Cliente</th>
      <th>Valor</th>
      <th>Status</th>
      <th>#</th>
      <th>#</th>
      <th>#</th>
    </tr>
    </thead>

    <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.client.nome %></td>
        <td><%= pedido.valor_total %></td>
        <td><%= pedido.status %></td>
        <td><%= link_to "Show this pedido", pedido %></td>
        <td><%= link_to "Edit this pedido", edit_pedido_path(pedido) %></td>
        <td><%= button_to "Destroy this pedido", pedido, method: :delete %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<hr>
<%= link_to "New pedido", new_pedido_path %>
